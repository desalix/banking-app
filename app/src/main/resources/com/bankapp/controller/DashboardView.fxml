<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bankapp.controller.DashboardController">
    
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #f4f4f4; -fx-padding: 15;">
            <Label text="BankApp" textFill="#007bff">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            
            <HBox HBox.hgrow="ALWAYS" />
            
            <Label fx:id="welcomeLabel" text="Welcome, User">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <Button fx:id="logoutButton" text="Logout" style="-fx-background-color: transparent; -fx-text-fill: #dc3545; -fx-underline: true;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="30.0" style="-fx-padding: 30;">
            
            <VBox style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 20; -fx-background-radius: 5;">
                <Label text="Total Balance" textFill="#666666">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label fx:id="balanceLabel" text="\$ 0.00">
                    <font>
                        <Font name="System Bold" size="48.0" />
                    </font>
                </Label>
                <Separator style="-fx-padding: 10 0 10 0;" />
                <HBox spacing="15.0">
                    <Label text="Primary Account:" />
                    <Label fx:id="accountNumLabel" text="No Accounts Found" style="-fx-font-weight: bold;" />
                </HBox>
            </VBox>

            <Label text="Quick Actions">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>

            <HBox spacing="20.0">
                <Button fx:id="transferButton" text="Transfer Money" prefWidth="150.0" prefHeight="80.0" 
                        style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"/>
                
                <Button fx:id="transactionsButton" text="View History" prefWidth="150.0" prefHeight="80.0" 
                        style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"/>
                
                <Button fx:id="addAccountButton" text="Open Account" prefWidth="150.0" prefHeight="80.0" 
                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
