<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bankapp.controller.LoginController">
    
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Welcome to BankApp">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    
    <Label text="Please sign in to continue" textFill="#666666" />

    <VBox spacing="10.0" maxWidth="300.0">
        <Label text="Username" />
        <TextField fx:id="usernameField" promptText="Enter your username" />
        
        <Label text="Password" />
        <PasswordField fx:id="passwordField" promptText="Enter your password" />
    </VBox>

    <VBox spacing="10.0" maxWidth="300.0">
        <Button fx:id="loginButton" text="Login" maxWidth="Infinity" defaultButton="true" 
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;"/>
        
        <Button fx:id="registerButton" text="Register New Account" maxWidth="Infinity" 
                style="-fx-background-color: transparent; -fx-text-fill: #007bff; -fx-underline: true;"/>
    </VBox>
    
    <Label fx:id="errorLabel" textFill="red" visible="false" />

</VBox>
