<BorderPane fx:id="mainLayout" prefHeight="700.0" prefWidth="1000.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bankapp.controller.MainLayoutController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="25.0" styleClass="header">
            <Label styleClass="app-title" text="Finsaver" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="pageTitle" styleClass="page-title" text="Home" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="profileButton" styleClass="profile-button" text="Profile" />
        </HBox>
    </top>

    <left>
        <VBox spacing="10.0" styleClass="sidebar">
            <Button fx:id="homeButton" maxWidth="Infinity" styleClass="nav-button" text="Home">
                <graphic>
                    <SVGPath content="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z" fill="#666666" scaleX="0.7" scaleY="0.7" />
                </graphic>
            </Button>
            <Button fx:id="transactionsButton" maxWidth="Infinity" styleClass="nav-button" text="Transactions">
                <graphic>
                    <SVGPath content="M3 13h2v-2H3v2zm0 4h2v-2H3v2zm0-8h2V7H3v2zm4 4h14v-2H7v2zm0 4h14v-2H7v2zM7 7v2h14V7H7z" fill="#666666" scaleX="0.7" scaleY="0.7" />
                </graphic>
            </Button>
            <Button fx:id="investmentsButton" maxWidth="Infinity" styleClass="nav-button" text="Investments">
                <graphic>
                    <SVGPath content="M3.5 18.49l6-6.01 4 4L22 6.92l-1.41-1.41-7.09 7.97-4-4L2 16.99z" fill="#666666" scaleX="0.7" scaleY="0.7" />
                </graphic>
            </Button>
            <Button fx:id="accountsButton" maxWidth="Infinity" styleClass="nav-button" text="Accounts">
                <graphic>
                    <SVGPath content="M4 10h12a2 2 0 002-2V6a2 2 0 00-2-2H4a2 2 0 00-2 2v2a2 2 0 002 2zm0 2a2 2 0 00-2 2v6a2 2 0 002 2h12a2 2 0 002-2v-6a2 2 0 00-2-2H4z" fill="#666666" scaleX="0.7" scaleY="0.7" />
                </graphic>
            </Button>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" styleClass="content-area" />
    </center>

</BorderPane>
